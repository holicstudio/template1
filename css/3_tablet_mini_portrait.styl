/*----- Basic installation -----*/
@import "variables"


/*---- Other ----*/
{principal-title}
    font-size size-large
    line-height line-large
{second-title}
    font-size size-xmedium
    line-height line-xmedium
{third-title}
    font-size size-medium
    line-height line-medium
/*---- btn ----*/
.btn
    padding 10px 30px 6px 30px
    line-height 14px     
    

/*---- innerblock -----*/
.inner-block
    width 100%
    
/*:::::::::::: Wrapper ::::::::::::::*/
#wrapper.active
    margin-left -50%
    box-shadow 0 5px 40px rgba(0,0,0,.5)

/*:::::::::::: Header ::::::::::::::*/
header
    width 90%
    padding 10px 5%
    
/*--- logo ---*/
.logo
    width 140px

/*---- menu ----*/
#menu
    position fixed
    top 0
    right 0
    width 50%
    background gray5
    padding-top 14px
    height 100%
    ul
        li
            margin-right 10px
            width 90%
            padding 10px 5%
            border-bottom 1px solid gray1
            a
                color neutral
                i
                    color neutral
            a.active
                color principal
                
/*---- open -----*/
#open
    width 30px
    height 30px
    float right
    display block
    z-index 10
    top 20px
    small
        width 100%
        background txt
        height 3px
        margin-bottom 7px
        display block
        background txt1
#open small:last-child
    margin-bottom 0
    opacity 1
#open.active
    small
        background principal !important
        margin-top 1px
    small:nth-child(1)
        transform rotate(45deg)
        transform-origin 0px 7px
    small:nth-child(2)
        transform rotate(-45deg)
        transform-origin 17px 3px
    small:last-child
        opacity 0 
        
        
/*:::::::::::: Content ::::::::::::::*/
        
        
/*----- Slider -------*/
.slider,
.slider .slick-slide
    width 100%
    height 350px
/*-- arrow --*/    
.slider
    .slick-arrow
        right 5%
        font-size 30px
        width 30px
    .slick-prev
        top 200px
        border-bottom 2px solid neutral
        padding-bottom 10px
    .slick-next
        top 170px
    /*-- dots --*/    
    .slick-dots
        width 30px
        right 5%
        bottom 20px
            
/*-- slick slide --*/
.slider .slick-slide
    article
        width 70%
        position absolute
        bottom 20px
        left 5%
        p
            display none
        h1,
        h2
            span
                font-size size-xlarge
                line-height line-xlarge
    

    
/*---- btn zone ----*/    
.btn-zone
    a
        margin-right 20px   