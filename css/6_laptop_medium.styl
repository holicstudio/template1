/*----- Basic installation -----*/
@import "variables"


/*---- Other ----*/
{principal-title}
    font-size size-large
    line-height line-large
{second-title}
    font-size size-xmedium
    line-height line-xmedium
{third-title}
    font-size size-medium
    line-height line-medium
a:hover
    text-decoration none
/*---- btn ----*/
.btn
    padding 10px 40px 6px 40px
    line-height 14px
.btn.type1:hover
    background principal2
    outline-color principal2
.btn.type2:hover
    background neutral
    color principal 
.btn.type3:hover
    background principal
    color neutral
    
/*---- module ----*/
.module
    width 100%
    padding 40px 0    
    
/*---- innerblock -----*/
.inner-block
    width 900px
    

/*:::::::::::: Header ::::::::::::::*/
header
    width 100%
    padding-top 10px
    
/*--- logo ---*/
.logo
    width 190px

/*---- menu ----*/
#menu
    float right
    padding-top 20px
    ul
        li
            margin-right 20px
            a
                color txt
                border-bottom 3px solid neutral
                padding-bottom 20px
                padding-top 5px
                height 20px
                i
                    color txt
            a:hover
                color principal
                i
                    color principal
            a.active
                border-bottom 3px solid principal
                
/*--- Open ----*/
#open
    display none
    
/*:::::::::::: Content ::::::::::::::*/
        
        
/*________ Slider ________*/
.slider,
.slider .slick-slide
    width 100%
    height 420px
/*-- arrow --*/    
.slider
    .slick-arrow
        right 5%
        font-size 30px
        width 30px
    .slick-arrow:hover
        i
            color principal
    .slick-prev
        top 140px
        border-bottom 2px solid neutral
        padding-bottom 10px
    .slick-next
        top 110px
    /*-- dots --*/    
    .slick-dots
        width 30px
        right 5%
        top 200px
        li
            button:hover
                i
                    color principal
            
/*-- slick slide --*/
.slider .slick-slide
    article
        width 50%
        padding-top 120px
        h1,
        h2
            span
                font-size size-xlarge
                line-height line-xlarge
    

    
/*---- btn zone ----*/    
.btn-zone
    a
        margin-right 20px 
        
/*------ Middle block ------*/
.middle-block
    p
        width 70%
        margin 0 auto 30px auto
        font-size size-medium
        line-height line-medium  
        
/*------ The grid ------*/        
.the-grid
    .small-grid
        width 48.5%
        ul
            li
                width 46.7%
                margin-bottom 30px
                margin-right 6.6%
                height 185px
            li+li+li
                width 100%
    aside
        float right
        height 400px
        width 48.5%

/*---- element -----*/        
.element
    article
        position absolute
        left 5%
        bottom 15px
        z-index 3
    .shade
        height 50%
.element:hover
    figure
        transform scale(1.1)
        
/*________ Section hero ________*/
.section-hero
    height 420px
    .inner-block
        text-align center
        article
            padding-top 120px
            width 50%
    .line
        left 50%
        margin-left -20px
        position relative
    h1,
    h2
        span
            font-size size-xlarge
            line-height line-xlarge

/*________ Message module ________*/
.message-module
    width 100%
    padding 40px 0
    
/*________ half module ________*/
.half-module
    width 100%
    article
        width 45%
        padding-top 40px
        a.btn
            max-width 60px
            margin-top 20px
    aside
        width 50%
        min-height 450px
        figure
            width 300% 
            
/*---- row side ----*/ 
.row-side.right-side
    article
        float left
        padding-right 5%
    aside
        float right
.row-side.left-side
    article
        float right
        padding-left 5%
    aside
        float left
        figure
            right 0
            left inherit   
            
/*________ Inner page ________*/
.inner-page
    padding 40px 0
    article
        width 75%
        img.medium-image
            width 70%
        img.small-image
            width 40%    
            
/*________ Social bar ________*/
.social-bar
    width 45px
    position fixed
    ul
        li
            height 40px
            margin-bottom 10px
            padding-bottom 12px
            div
                padding-top 14px
            div#facebook a:hover
                i
                    color social1
            div#twitter a:hover
                i
                    color social2
            a.share
                position absolute
                top 0
        li:first-child
            border-bottom 1px solid gray1
        li:last-child
            margin-bottom 0            

/*________ Gallery module ________*/            
.gallery-module
    button.slick-arrow
        top 55%
        margin-top -20px
        right 3%
    button.slick-next
        top 45%
.gallery-module,
.gallery-module .slick-slide
    height 360px     
    
/*________ Carousel module ________*/    
.carousel-module
    padding-top 50px
    button.slick-prev
        left 48%
        margin-left -20px
    button.slick-next
        right 48%
        margin-right -20px    
    
/*________ Tables module ________*/  
.tables-module
    margin-bottom 30px
    ul
        li
            margin-right 3%
            width 27%
            padding 20px 2%
            p.price
                font-size 25px
            .btn
                width 100%
                padding 10px 0 6px 0
        li.active
            transform scale(1.1)
            margin-top 5px
            h3
                font-size 25px
            p.price
                font-size 30px  
                
/*---- Table -----*/
table
    width 100%               
                    
/*________ The form ________*/ 
.theform
    label
        i
            width 4%
        input,
        textarea
            width 96% 
            
        
/*:::::::::::: Fix ::::::::::::::*/
.fix
    height 92px

/*:::::::::::: Footer ::::::::::::::*/
footer
    width 100%
    padding 20px 0
    
/*---- icon block ----*/
.icon-block
    img
        width 40px
        margin-right 10px
    article
        padding-top 13px
            
/*--- social footer ----*/
.social-footer
    float right     