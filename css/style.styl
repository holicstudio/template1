/*----- Basic installation -----*/
@import "normalize.css"
@import "font-awesome.css"
@import "font-face.css"
@import "animate.css"
@import "variables"


/*:::::::::::: Body ::::::::::::::*/
html
body
    margin 0
    padding 0
    height 100%
    font-size size-normal
    line-height line-normal
    color txt

/*---- Other ----*/
{principal-title}
    margin-bottom 20px
{second-title}
    margin-bottom 20px    
{third-title}
    margin-bottom 20px
p
    margin-bottom 10px
a
    color principal
    text-decoration underline

    
/*---- Transition ----*/
{effect}
    transition .4s

/*---- innerblock -----*/
.inner-block
    height auto
    margin 0 auto

/*:::::::::::: Wrapper ::::::::::::::*/
#wrapper
    min-height 100%
    position relative
    width 100%
    background neutral
    

/*:::::::::::: Header ::::::::::::::*/
header
    position relative
    background neutral
    border-bottom 1px solid gray2
     
/*--- logo ---*/
.logo
    float left
    img
        width 100%
        height auto

/*---- menu ----*/
#menu
    ul
        width 100%
        height auto
        padding 0
        margin 0
        list-style none
        li
            float left
            a
                text-decoration none
                text-transform uppercase
                font-family fbold
                display block
                float left
        li.social
            a
                margin-right 10px
            a+a
                margin-right 0
    



/*:::::::::::: Content ::::::::::::::*/
#content
    height auto
    position relative
    width 100%

    
/*:::::::::::: Fix ::::::::::::::*/
.fix
    width 100%

/*:::::::::::: Footer ::::::::::::::*/
footer
    position absolute
    width 100%
    bottom 0
    left 0
    z-index 1    